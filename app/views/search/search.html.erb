<div class="container title">
  <h1>Artie's Airfare Search</h1>
</div>

<div class="container">
  <h3>Welcome to Artie's Airfare Search. Where you can search through all the flights in the world!!! </h3>
</div>

<div class="container" id="origin">
  <h4>Where are you flying from?</h4>
  <form class="origin__form input_con">
    <div class="form-group">
      <input class="form-control" id="origin__input" placeholder="Miami, New York...">
    </div>
    <button id="origin__submit" class="btn btn-default">Search airports in that area</button>
  </form>
</div>

<div class="container" id="destination">
  <h4>Where are you flying to?</h4>
  <form class="destination__form input_con">
    <div class="form-group">
      <input class="form-control" id="destination__input" placeholder="Toyko, London...">
    </div>
    <button id="destination__submit" type="submit" class="btn btn-default">Search airports in that area</button>
  </form>
</div>

<div class="container">
  <%= form_for(:search, url: search_results_path, method: :get) do |f| %>
  <div class="form-group">
    <label for="origin__location">Origin</label>
    <%= f.text_field :origin__location, class: "form-control" %>

    <label for="destination__location">Destination</label>
    <%= f.text_field :destination__location, class: "form-control" %>

    <label for="date">When?</label> <br>
    <%= f.text_field :date, type: :date, data:{ provide:'datepicker' } %>
  </div>
    <%= f.submit "Search Flights", class: "btn btn-default" %>
  <% end %>
  </div>

</div>
